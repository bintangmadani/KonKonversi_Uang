<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_gravity="center"
    android:background="@drawable/konversi">

    <ImageView

        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/bank"
        android:layout_gravity="center"
        android:layout_marginTop="75sp"/>

    <LinearLayout
        android:layout_marginStart="35dp"
        android:padding="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="35dp">

        <EditText
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/uang_input"
            android:textSize="20sp"
            android:hint="0 Rupiah"/>
        <TextView
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="="
            android:textSize="20sp"/>

        <TextView
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hasil_konversi"
            android:text="Hasil Konversi"
            android:background="#FFFFFF"
            android:textSize="20sp"/>
    </LinearLayout>

    <Button
        android:layout_marginStart="50dp"
        android:id="@+id/rpusd"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#FF0000"
        android:onClick="toUSD"
        android:text="Rp > USD"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        tools:ignore="OnClick"
        android:layout_marginLeft="50dp" />

    <Button
        android:layout_marginStart="50dp"
        android:layout_width="270dp"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:text="Rp > YEN"
        android:textColor="#FFFFFF"
        android:background="#FFC107"
        android:onClick="toYEN"
        android:id="@+id/rpyen"
        android:layout_marginLeft="50dp"
        tools:ignore="OnClick" />

    <Button
        android:layout_marginStart="50dp"
        android:layout_width="270dp"
        android:textColor="#FFFFFF"
        android:background="#00BCD4"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:text="Rp > Euro"
        android:textSize="20sp"
        android:onClick="toEuro"
        android:id="@+id/rpeuro"
        tools:ignore="OnClick"
        android:layout_marginLeft="50dp" />

    <Button
        android:layout_marginStart="50dp"
        android:layout_width="270dp"
        android:textColor="#FFFFFF"
        android:background="#CFE211"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:text="Rp > Pounds"
        android:textSize="20sp"
        android:onClick="toEuro"
        android:id="@+id/rpounds"
        android:layout_marginLeft="50dp"
        tools:ignore="OnClick" />



</LinearLayout>
